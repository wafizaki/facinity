<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fdfdfd" android:padding="16dp">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvSkinCheckerTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp" android:layout_marginStart="4dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_menu_revert"
        android:tint="#222" android:contentDescription="Back" />

    <TextView
        android:id="@+id/tvSkinCheckerTitle"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="SkinChecker" android:textSize="28sp" android:textStyle="bold"
        android:textColor="#222" android:fontFamily="cursive"
        android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <FrameLayout
        android:id="@+id/previewFrame"
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_below="@id/tvSkinCheckerTitle"
        android:layout_above="@id/btnRow"
        android:layout_marginTop="8dp" android:layout_marginBottom="16dp"
        android:background="#ccc" android:layout_centerHorizontal="true">

        <TextureView
            android:id="@+id/textureView"
            android:layout_width="match_parent" android:layout_height="match_parent" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:weightSum="3"
        android:id="@+id/btnRow">



        <Button
            android:id="@+id/btnViewPhotos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="View Stored Photos"
            android:padding="12dp" />
        <Button
            android:id="@+id/btnCapture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Capture"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:backgroundTint="#3F51B5"
            android:textColor="#ffffff"
            android:elevation="4dp" />

        <Button
            android:id="@+id/btnSwitchCamera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Switch"
            android:padding="12dp" />
    </LinearLayout>




    <Button
        android:id="@+id/btnRetake"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Retake" android:textSize="18sp" android:fontFamily="sans-serif-medium"
        android:visibility="gone"
        android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
        android:paddingStart="24dp" android:paddingEnd="24dp"
        android:paddingTop="12dp" android:paddingBottom="12dp"
        android:backgroundTint="#F44336" android:textColor="#ffffff" android:elevation="4dp" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Next" android:textSize="18sp" android:fontFamily="sans-serif-medium"
        android:visibility="gone"
        android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"
        android:paddingStart="24dp" android:paddingEnd="24dp"
        android:paddingTop="12dp" android:paddingBottom="12dp"
        android:backgroundTint="#4CAF50" android:textColor="#ffffff" android:elevation="4dp" />

    <ImageView
        android:id="@+id/imageView"
        android:visibility="gone"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_below="@id/tvSkinCheckerTitle" android:layout_above="@id/btnRetake"
        android:layout_marginTop="8dp" android:layout_marginBottom="16dp"
        android:scaleType="fitCenter" />
</RelativeLayout>
