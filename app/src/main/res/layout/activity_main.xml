<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="24dp">

    <!-- Back Button dengan CardView agar lebih modern -->
    <androidx.cardview.widget.CardView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="4dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        android:background="@android:color/transparent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="@color/teal_primary"
            android:contentDescription="Back"
            android:scaleType="center"
            android:elevation="0dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SkinChecker"
        android:textSize="32sp"
        android:fontFamily="@font/poppins_bold"
        android:textStyle="bold"
        android:textColor="#222"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:letterSpacing="0.05"
        android:shadowColor="#22000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="4"/>

    <!-- Tombol utama dengan CardView warna teal dan button transparan -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/teal_primary">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's Check!"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_medium"
            android:background="@android:color/transparent"
            android:textColor="#ffffff"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:elevation="0dp"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>