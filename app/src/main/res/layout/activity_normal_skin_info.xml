<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Normal Skin Explanation -->
        <TextView
            android:text="Normal Skin"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Normal skin feels balanced, neither too oily nor too dry. It has a smooth texture, small pores, and is not prone to sensitivity. Maintain with gentle cleansing, light moisturizer, and daily sunscreen."
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"/>

        <!-- Facewash Section -->
        <TextView
            android:text="Recommended Facewash"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imgFacewash"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/facewash_normal"
            android:contentDescription="@string/facewash_image"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:text="Use a mild, gentle facewash that maintains the skin's natural balance. Avoid harsh cleansers that can disrupt the skin barrier."
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>
        <Button
            android:id="@+id/btnCariFacewash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF5722"
            android:textColor="#fff"
            android:text="Find Facewash on Shopee"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>

        <!-- Moisturizer Section -->
        <TextView
            android:text="Recommended Moisturizer"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imgMoisturizer"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/moist_normal"
            android:contentDescription="@string/moisturizer_image"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:text="A lightweight, non-greasy moisturizer is ideal for normal skin. Look for products with ingredients like hyaluronic acid or glycerin for hydration."
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>
        <Button
            android:id="@+id/btnCariMoisturizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF5722"
            android:textColor="#fff"
            android:text="Find Moisturizer on Shopee"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>

        <!-- Toner Section -->
        <TextView
            android:text="Recommended Toner"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imgToner"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/toner_normal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:text="Choose a gentle, alcohol-free toner to refresh and balance the skin. Hydrating toners with soothing ingredients are best."
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>
        <Button
            android:id="@+id/btnCariToner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF5722"
            android:textColor="#fff"
            android:text="Find Toner on Shopee"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>

        <!-- Sunscreen Section -->
        <TextView
            android:text="Recommended Sunscreen"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imgSunscreen"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/sunscreen_normal"
            android:contentDescription="@string/sunscreen_image"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:text="Apply a broad-spectrum sunscreen daily. Lightweight lotions or gels are suitable for normal skin and provide effective protection."
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"/>
        <Button
            android:id="@+id/btnCariSunscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF5722"
            android:textColor="#fff"
            android:text="Find Sunscreen on Shopee"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>
            <!-- Back Button -->
        <Button
            android:id="@+id/btnBackHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Home"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>