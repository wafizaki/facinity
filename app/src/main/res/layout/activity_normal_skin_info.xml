<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F2F1">

    <!-- Top Decorative Gradient (optional) -->
    <View
        android:id="@+id/topGradient"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/teal_background"
        android:layout_alignParentTop="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:text="Normal Skin Info"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#F4F4F4"
                android:fontFamily="@font/poppins_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"/>

            <!-- Main Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                android:backgroundTint="#FFFFFF"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <!-- Normal Skin Explanation -->
                    <TextView
                        android:text="Normal skin feels balanced, neither too oily nor too dry. It has a smooth texture, small pores, and is not prone to sensitivity. Maintain with gentle cleansing, light moisturizer, and daily sunscreen."
                        android:textSize="15sp"
                        android:textColor="#009688"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"/>

                    <!-- Facewash Section -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/facewash_normal"
                            android:padding="8dp"
                            android:layout_marginEnd="12dp"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:text="Facewash"
                                android:textStyle="bold"
                                android:textColor="#009688"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="Use a mild, gentle facewash that maintains the skin's natural balance. Avoid harsh cleansers."
                                android:textSize="13sp"
                                android:textColor="#444"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <Button
                            android:id="@+id/btnCariFacewash"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Shopee"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:backgroundTint="#009688"
                            android:background="@drawable/bg_rounded_button"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <!-- Moisturizer Section -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/moist_normal"
                            android:padding="8dp"
                            android:layout_marginEnd="12dp"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:text="Moisturizer"
                                android:textStyle="bold"
                                android:textColor="#009688"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="A lightweight, non-greasy moisturizer is ideal for normal skin. Look for products with ingredients like hyaluronic acid or glycerin for hydration."
                                android:textSize="13sp"
                                android:textColor="#444"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <Button
                            android:id="@+id/btnCariMoisturizer"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Shopee"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:backgroundTint="#009688"
                            android:background="@drawable/bg_rounded_button"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <!-- Toner Section -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/toner_normal"
                            android:padding="8dp"
                            android:layout_marginEnd="12dp"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:text="Toner"
                                android:textStyle="bold"
                                android:textColor="#009688"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="Choose a gentle, alcohol-free toner to refresh and balance the skin. Hydrating toners with soothing ingredients are best."
                                android:textSize="13sp"
                                android:textColor="#444"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <Button
                            android:id="@+id/btnCariToner"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Shopee"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:backgroundTint="#009688"
                            android:background="@drawable/bg_rounded_button"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <!-- Sunscreen Section -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/sunscreen_normal"
                            android:padding="8dp"
                            android:layout_marginEnd="12dp"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:text="Sunscreen"
                                android:textStyle="bold"
                                android:textColor="#009688"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="Apply a broad-spectrum sunscreen daily. Lightweight lotions or gels are suitable for normal skin and provide effective protection."
                                android:textSize="13sp"
                                android:textColor="#444"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <Button
                            android:id="@+id/btnCariSunscreen"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Shopee"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:backgroundTint="#009688"
                            android:background="@drawable/bg_rounded_button"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Big Rounded Button at Bottom -->
    <Button
        android:id="@+id/btnBackHome"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Back to Home"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="18sp"
        android:backgroundTint="#009688"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:layout_marginBottom="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_rounded_button"/>
</RelativeLayout>