<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="24dp">
    <TextView
        android:text="Normal Skin"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Kulit normal terasa seimbang, tidak terlalu berminyak atau kering, dan pori-pori kecil. Perawatan: cukup jaga kebersihan dan gunakan pelembap ringan."
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"/>
    <Button
        android:id="@+id/btnCariProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cari Produk"
        android:backgroundTint="#FF5722"
        android:textColor="#fff"
        android:fontFamily="@font/poppins_medium"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>